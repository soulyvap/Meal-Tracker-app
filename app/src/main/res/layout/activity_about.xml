        app:layout_constraintBottom_toTopOf="@+id/textView5worksentence"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView11sqlite" />

